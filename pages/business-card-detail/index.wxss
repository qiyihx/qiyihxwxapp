  font-size:29rpx;
}

.container{
    width: 100%;
    background-color: #f0eff5;
}

.line{
    height: 2rpx;
    background-color: #f0eff5;
    position: relative;
    margin-left: 30rpx;
}

.line_head_cls{
    width: 100%; 
    height: 150rpx;
    line-height: 150rpx;
    position: relative;
}

.line_key_cls{
    position: absolute;
    left: 30rpx;
    font-weight:400;
}

.line_val2_cls{
    position: absolute;
    right: 30rpx;
    color: #b4b4b4;
}

.wx-head-img{
    width: 120rpx;
    height: 120rpx; 
    border-radius: 5%;
    margin-top: 10rpx;
}

.nickName{ 
    width: 100%;
    position: outside;
    font-style: italic;
    text-align: center;
}

